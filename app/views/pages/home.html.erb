<h1>L'étagère digitale</h1>


<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('background.jpg');">
        <div class="card-category"><%= post.tags.first.name %></div>
        <div class="card-description">
          <h2><%= post.title %></h2>
        </div>
        <img class="card-user avatar" src="user.jpg">
        <a class="card-link" href="#" ></a>
      </div>
    </div>
    <% end %>
  </div>
</div>
