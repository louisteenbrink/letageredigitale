
<div class="container">

  <h1>L'étagère digitale</h1>
  <div class="filters">
    <% @tags.each do |tag| %>
    <div class="filter btn-medium">
      <%= link_to "#{tag.name}", fetch_posts_path(:tag_id => tag.id), :remote => true %>
    </div>
    <% end %>
  </div>

  <div class="row">
    <% @posts.each do |post| %>
    <div class="col-xs-12 col-sm-4">
      <%= link_to posts_path(post) do %>
      <div class="card">
        <div class="card-category"><%= post.tags.first.name %></div>
        <div class="card-description">
          <h2><%= post.title %></h2>
        </div>
        <img class="card-user avatar">
      </div>
      <% end %>
    </div>
    <% end %>
  </div>

</div>
